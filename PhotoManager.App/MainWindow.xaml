<Window x:Class="PhotoManager.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PhotoManager.App.Views"
        xmlns:viewModels="clr-namespace:PhotoManager.App.ViewModels"
        Title="Photo Manager" Height="600" Width="900">


  <Window.DataContext>
    <viewModels:MainWindowViewModel />
  </Window.DataContext>



  <Grid>
    <views:SidebarView DataContext="{Binding Sidebar}" />
    <views:PhotoGalleryView DataContext="{Binding PhotoGallery}" />
  </Grid>
  
</Window>
