<Window x:Class="PhotoManager.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PhotoManager.App.Views"
        Title="Photo Manager"
        Height="600" Width="900">

  <!-- No Window.DataContext here — App.xaml.cs will set it -->

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- SidebarView is bound to Sidebar property on MainWindowViewModel -->
    <views:SidebarView Grid.Column="0" DataContext="{Binding Sidebar}" />

    <!-- PhotoGalleryView is bound to PhotoGallery property on MainWindowViewModel -->
    <views:PhotoGalleryView Grid.Column="1" DataContext="{Binding PhotoGallery}" />
  </Grid>

</Window>
